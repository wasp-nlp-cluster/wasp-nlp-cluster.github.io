<div class="container">
  {% assign all_news = site.news | sort: 'date' | reverse %}
  {% assign per_news = 1 %}
  {% assign recent_news = all_news | slice: 0, per_news %}
  
  {% if recent_news.size == 0 %}
    <div class="alert alert-info text-center">No news available at this time.</div>
  {% else %}
    <section class="recent-news mb-5">
      <h2 class="mb-4">Recent News</h2>
      <ul class="list-unstyled">
        {% for item in recent_news %}
          <li class="d-flex justify-content-between align-items-center mb-2">
            {% if item.inline %}
              <span class="mb-1">{{ item.title }}</span>
            {% else %}
              <a href="{{ item.url | relative_url }}" class="text-decoration-none mb-1">{{ item.title }}</a>
            {% endif %}
            <span class="text-muted small">
              <i class="fas fa-calendar-alt"></i> {{ item.date | date: "%b %d, %Y" }}
            </span>
          </li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}
  
  {% if all_news.size > per_news %}
    <section class="more-news">
      <h3 class="mb-3">More News</h3>
      <div class="scrollable-news" style="max-height: 400px; overflow-y: auto;">
        <ul class="list-unstyled">
          {% for item in all_news offset:per_news %}
            <li class="d-flex justify-content-between align-items-center mb-2">
              {% if item.inline %}
                <span class="mb-1">{{ item.title }}</span>
              {% else %}
                <a href="{{ item.url | relative_url }}" class="text-decoration-none">{{ item.title }}</a>
              {% endif %}
              <span class="text-muted small">
                <i class="fas fa-calendar-alt"></i> {{ item.date | date: "%b %d, %Y" }}
              </span>
            </li>
          {% endfor %}
        </ul>
      </div>
    </section>
  {% endif %}
</div>
